{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

<header class="main-header post-head {{#if image}} interior-header" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
            <a class="icon-menu home-button" href="{{@blog.url}}"><span class="word"><i class="fa fa-angle-left"></i>Home</span></a>
    </nav>
</header>

<main class="content" role="main">
    <div class="container interior-container">
        <article class="{{post_class}}">

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
            </header>
            
            <div class="row">
                <div class="col-xs-12 col-md-4">
                    <img src="/assets/img/contact.jpg" alt="">
                </div>
                <div class="col-xs-12 col-md-8">
                    <section class="post-content">
                        {{content}}
                    </section>
                </div>
            </div>
        </article>
    </div>
</main>
{{/post}}
